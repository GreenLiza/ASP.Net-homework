@model UserLogInModel
@{
    ViewData["Title"] = "Log In";
}

<h3>Log In</h3>

<form asp-controller="User" asp-action="LogIn" asp-antiforgery="true" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="mb-3">
        <lable class="form-label" asp-for="Username">Username</lable>
        <input class="form-control" type="text" asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <lable class="form-label" asp-for="Password">Password</lable>
        <input class="form-control" type="password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div>
        <input class="btn-secondary" type="submit" value="Confirm"/>
    </div>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    }
